<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bsu.courseproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".ui.NavigatorActivity"
            android:label="@string/app_title"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
        </activity>
        
        <activity
            android:name=".ui.Startup"
            android:label="@string/app_title"
            android:theme="@style/AppTheme" 
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.ProjectsActivity"
            android:label="@string/label_projects"
            android:theme="@style/AppTheme"
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
            
        </activity>
        <activity
            android:name=".ui.NewEmployeeActivity"
            android:label="@string/label_new_employee"
            android:theme="@style/AppTheme"
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.NewCustomerInvestorActivity"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        
        <activity
            android:name=".ui.NewProject"
            android:label="Проект"
            android:theme="@style/AppTheme"
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        
        <activity
            android:name=".ui.NewProjectActivity"
            android:label="@string/label_new_project"
            android:theme="@style/AppTheme"
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.CatalogueFragmentActivity"
            android:theme="@style/AppTheme"
			android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.CatalogueList"
            android:label="@string/label_catalogues"
            android:theme="@style/AppTheme"
			 android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>

        <provider
            android:name=".db.ProjectManagerProvider"
            android:authorities="by.bsu.courseproject.ProjectManagerProvider" >
            <grant-uri-permission android:pathPattern=".*" />
        </provider>
    </application>

</manifest>